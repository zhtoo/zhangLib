<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是标题" />

    <LinearLayout
        android:id="@+id/check_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_white" />

        <TextView
            android:id="@+id/check_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是文本" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_white" />

        <TextView
            android:id="@+id/check_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是文本" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/check_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_white" />

        <TextView
            android:id="@+id/check_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是文本" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_image4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_white" />

        <TextView
            android:id="@+id/check_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是文本" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一步"/>

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"/>


    </LinearLayout>

</LinearLayout>