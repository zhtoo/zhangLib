<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
              android:layout_margin="16dp"
    tools:context="com.hs.progress.MainActivity">

        <com.hs.progress.ColorProgressBar
            android:id="@+id/bar"
            android:background="@android:color/holo_green_dark"
            android:layout_width="300dp"
            android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:onClick="click10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="10" />

        <Button
            android:text="20"
            android:onClick="click20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:text="40"
            android:onClick="click40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:text="60"
            android:onClick="click60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:text="80"
            android:onClick="click80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:text="100"
            android:onClick="click100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />




    </LinearLayout>





</LinearLayout>
